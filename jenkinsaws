pipeline {
    agent any
     environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIAZV7XJ5OKGSDCUDFA')
        AWS_SECRET_ACCESS_KEY = credentials('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')
    } 
 stages {
     
     stage('SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/yolacastillo/FirstDevOpsJob.git'
                
            }
        }
    stage ('Build') {
         steps {
             bat(script: 'mvn -f pom.xml clean install', returnStdout: true);
         }
        }
        
        stage ('Docker Build') {
          steps{
             sh(script: 'docker login --username $UsernameDockerHub --password  $PasswordDockerHub' , returnStdout:true);
             sh(script: 'docker build -t yolacastillo/firstdevopsjob .' , returnStdout:true);
             sh(script: 'docker push yolacastillo/firstdevopsjob' , returnStdout:true);  
           }

        }
        
         stage ('K8S Deploy') {
            steps {
              bat (script:  'aws configure set region us-east-1',returnStdout: true);
              bat(script: 'kubectl config use-context devops@eks-cluster.us-east-1.eksctl.io  --kubeconfig=$KUBE_PATH_CONFIG', returnStdout: true);
              bat(script: 'Kubectl delete --all pods --kubeconfig=$KUBE_PATH_CONFIG & kubectl apply -f Devops.yaml --kubeconfig=$KUBE_PATH_CONFIG', returnStdout: true);
            }
               
            
        }
    
      
     }
}
